<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mysqltext.mapper.CinemaMapper">

    <!-- 结果映射 -->
    <resultMap id="CinemaResultMap" type="com.example.mysqltext.model.Cinema">
        <id property="cinemaId" column="cinema_id"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="contactPhone" column="contact_phone"/>
    </resultMap>

    <!-- 查询所有影院 -->
    <select id="findAll" resultMap="CinemaResultMap">
        SELECT cinema_id, name, address, contact_phone
        FROM Cinema
        ORDER BY name
    </select>

    <!-- 根据ID查询影院 -->
    <select id="findById" parameterType="java.lang.Integer" resultMap="CinemaResultMap">
        SELECT cinema_id, name, address, contact_phone
        FROM Cinema
        WHERE cinema_id = #{cinemaId}
    </select>

    <!-- 根据名称搜索影院 -->
    <select id="findByName" parameterType="java.lang.String" resultMap="CinemaResultMap">
        SELECT cinema_id, name, address, contact_phone
        FROM Cinema
        WHERE name LIKE CONCAT('%', #{name}, '%')
        ORDER BY name
    </select>

    <!-- 插入影院 -->
    <insert id="save" parameterType="com.example.mysqltext.model.Cinema" useGeneratedKeys="true" keyProperty="cinemaId">
        INSERT INTO Cinema (name, address, contact_phone)
        VALUES (#{name}, #{address}, #{contactPhone})
    </insert>

    <!-- 更新影院信息 -->
    <update id="update" parameterType="com.example.mysqltext.model.Cinema">
        UPDATE Cinema
        SET name = #{name},
            address = #{address},
            contact_phone = #{contactPhone}
        WHERE cinema_id = #{cinemaId}
    </update>

    <!-- 删除影院 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM Cinema WHERE cinema_id = #{cinemaId}
    </delete>

</mapper>